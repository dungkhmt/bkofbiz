<#macro buttonAdd text action width=40 height=20>
	<div style="
	color: #fff;
    background-color: #1a75ff;
    border-color: #4cae4c;
    display: inline-block;
    padding: 6px 12px;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    touch-action: manipulation;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
    text-transform: none;
    overflow: visible;
    font: inherit;
    box-sizing: inherit;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;"
    onClick="${action}()"
    >
		${text}
	</div>
	
</#macro>

